<h1> Stories</h1>
<div class="row">

  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div>
        {{!-- <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
          <i class="fas fa-pencil-alt"></i>
        </a> --}}
        {{#if user}}
        {{{editIcon user.id ../user.id id true}}}
        {{/if}}
      </div>
      <div class="card-content center-aign">
        <h5>{{title}}</h5>
        <p class="story-text">{{{ body }}}</p>
        <br>
        <div class="chip">
          <img src={{user.image}} alt="">
          <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
        </div>
      </div>

      <div class="card-action center-align">
        <a href="/stories/show/{{id}}" class="btn grey">Read more</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found</p>
  {{/each}}
</div>